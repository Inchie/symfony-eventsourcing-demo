{% extends 'base.html.twig' %}

{% block content %}
    <div class="row mt-3">
        <div class="col-md-12 mt-3">
            <h2>List of blogs</h2>
        </div>
        <div class="col-md-12">
            <div class="row pt-3">
                <div class="col-lg-7">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Blog-Name</th>
                            <th scope="col">Author</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for blog in blogs %}
                            <tr>
                                <td class="align-middle">{{ blog.name|e }}</td>
                                <td class="align-middle">{{ blog.author|e }}</td>
                                <td>
                                    <a href="{{ path('blog-edit', { 'stream': blog.stream }) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <a href="{{ path('blog-show', { 'stream': blog.stream }) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="fa fa-eye"></i> Show
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="{{ path('blog-create') }}" class="form-horizontal"  method="POST">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="string" name="form[name]" required="required" class="form-control" />
                                    <small id="nameHelp" class="form-text text-muted">Please insert your blog name.</small>
                                </div>
                                <div class="form-group">
                                    <label>Author</label>
                                    <select class="browser-default custom-select" name="form[author]">
                                        {% for user in users %}
                                            <option value="{{ user.stream }}">{{ user.name|e }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-plus"></i> Create Blog
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

