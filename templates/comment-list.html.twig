{% extends 'base.html.twig' %}

{% block content %}
    <div class="row mt-3">
        <div class="col-md-12 mt-3">
            <h2>List of comments</h2>
        </div>
        <div class="col-md-12">
            <div class="row pt-3">
                <div class="col-lg-12">
                    {% if comments|length > 0 %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Blog-Name</th>
                            <th scope="col">Author</th>
                            <th scope="col">Comment</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td class="align-middle">{{ comment.blogName }}</td>
                                <td class="align-middle">{{ comment.author }}</td>
                                <td class="align-middle">{{ comment.comment }}</td>
                                <td>
                                    <a href="{{ path('blog-edit', { 'id': comment.blogIdentifier }) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="fa fa-edit"></i> Edit blog
                                    </a>
                                    <a href="{{ path('blog-show', { 'id': comment.blogIdentifier }) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="fa fa-eye"></i> Show blog
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="fa fa-blogs"></i> No comments in blogs were found.
                        </div>
                    {% endif %}
                </div>
                <div class="col-lg-5">

                </div>
            </div>
        </div>
    </div>
{% endblock %}

