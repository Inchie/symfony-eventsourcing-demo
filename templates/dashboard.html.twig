{% extends 'base.html.twig' %}

{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Author</th>
            <th scope="col">Comment</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.author|e }}</td>
                <td>{{ comment.comment|e }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

